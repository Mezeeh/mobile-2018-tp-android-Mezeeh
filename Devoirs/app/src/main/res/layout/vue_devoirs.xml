<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Devoirs">

    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp" android:id="@+id/vue_liste_devoir"/>

    <Button
            android:text="Ajouter un devoir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/action_naviguer_ajouter_devoir"/>
</LinearLayout>